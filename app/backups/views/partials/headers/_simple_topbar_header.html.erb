<% if session[:user_id] %>
<!--Navbar-->
<div class="fmf-navbar">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 logo">
				<a href="/"><%= image_tag("logo.png") %></a>
			</div>
			<div class="col-sm-6">
				<ul class="fmf-nav-menu pull-right">
					<li><a href="/events">Events</a></li>
					<li><a href="/blogs">Blogs</a></li>
					<%= render "partials/headers/dropdowns/logged_in_dropdown" %>
				</ul>
			</div>
		</div>
	</div>
</div>
<!--/Navbar-->
<% end %>

<% if !(session[:user_id]) %>
<!--Navbar-->
<div class="fmf-navbar">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 logo">
				<a href="/"><%= image_tag("logo.png") %></a>
			</div>
			<div class="col-sm-6">
				<ul class="fmf-nav-menu pull-right">
					<li><a href="/events">Events</a></li>
					<li><a href="/blogs">Blogs</a></li>
					<li class="login-top-button txt-right">
						<a id="login-toggle-button" href="#" class="btn btn-primary">Login or Signup | <i class="fa fa-chevron-down"></i></a>
						<%= form_tag("/login") do %>
						<div id="login-top-menu">
							<div>
								<input type="text" name="username" class="form-control" placeholder="Username" />
							</div>
							<div class="margin-top-20">
								<input type="password" name="password" class="form-control" placeholder="Password" />
							</div>
							<div class="row margin-top-20">
								<div class="col-sm-9">
									<button class="btn btn-primary btn-block">Sign In</button>
								</div>
								<div class="col-sm-3" style="padding-left:0;">
									<a href="/auth/facebook" class="btn btn-info btn-block"><i class="fa fa-facebook"></i></a>
								</div>
							</div>
							<div class="margin-top-10 txt-left">
								<a id="signup-toggle-button" href="#">Sign Up for an Account</a>
							</div>
							<div class="txt-left margin-top-10">
								<a href="/forgot-password">Forgot Username / Password?</a>
							</div>
						</div>
						<% end %>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!--/Navbar-->
<% end %>