<!--Main-->
<div class="container margin-top-50 margin-bottom-50">
	<div class="row">
		<div class="col-sm-2">
			<%= render "partials/sidebars/profile_left_sidebar_public" %>
		</div>
		<div class="col-sm-10">
			<div class="medium-title">
				<% if @saved_events.empty? %>
					No events yet.
				<% else %>
					<%= @user.first_name %>'s Saved Events
				<% end %>
			</div>

			<% @saved_events.each do |save| %>
				<% 

				event = Event.find(save.event_id)

				%>

				<!--One Event-->
				<div class="row single-event">
					<div class="col-sm-3">
						<a href="/events/<%= event.id %>"><%= image_tag(get_event_thumb(event.event_id, :helper), { class: "img-responsive" }) %></a>
					</div>
					<div class="col-sm-9">
						<div>
							<a class="big-link" href="/events/<%= event.id %>"><%= event.event_name %></a>
						</div>
						<div>
							<%= event.event_date.strftime("%B %-d, %Y") %>
						</div>
						<div class="margin-top-10">
							<%= event.event_location %>
						</div>
						<div class="margin-top-10">
							<%= event.event_description[0..150] + "..." %>
						</div>
						<div class="margin-top-10">
							<a href="/events/<%= event.id %>">View event <i class="fa fa-angle-double-right"></i></a>
						</div>
					</div>
				</div>
				<!--/One Event-->
			<% end %>

			<div class="margin-top-20">
				<%= will_paginate(@saved_events) %>
			</div>
		</div>
	</div>
</div>
<!--/Main-->