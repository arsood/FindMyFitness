<% if session[:user_id] %>
<!--Navbar-->
<div class="fmf-navbar">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 logo">
				<a href="/"><%= image_tag("logo.png") %></a>
			</div>
			<div class="col-sm-6">
				<ul class="fmf-nav-menu pull-right">
					<li><a href="/events">Events</a></li>
					<li><a href="/blogs">Blogs</a></li>
					<%= render "partials/headers/dropdowns/business_dropdown" %>
				</ul>
			</div>
		</div>
	</div>
</div>
<!--/Navbar-->
<% end %>

<% if !(session[:user_id]) %>
<!--Navbar-->
<div class="fmf-navbar">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 logo">
				<a href="/"><%= image_tag("logo.png") %></a>
			</div>
			<div class="col-sm-6">
				<ul class="fmf-nav-menu pull-right">
					<li><a href="/events">Events</a></li>
					<li><a href="/blogs">Blogs</a></li>
					<li class="login-top-button txt-right">
						<a id="login-toggle-button" href="#" class="btn btn-primary">Login or Signup | <i class="fa fa-chevron-down"></i></a>
						<%= form_tag("/login") do %>
						<div id="login-top-menu">
							<div>
								<input type="text" name="username" class="form-control" placeholder="Username" />
							</div>
							<div class="margin-top-20">
								<input type="password" name="password" class="form-control" placeholder="Password" />
							</div>
							<div class="row margin-top-20">
								<div class="col-sm-9">
									<button class="btn btn-primary btn-block">Sign In</button>
								</div>
								<div class="col-sm-3" style="padding-left:0;">
									<a href="/auth/facebook" class="btn btn-info btn-block"><i class="fa fa-facebook"></i></a>
								</div>
							</div>
							<div class="margin-top-10 txt-left">
								<a id="signup-toggle-button" href="#">Sign Up for an Account</a>
							</div>
							<div class="txt-left margin-top-10">
								<a href="/forgot-password">Forgot Username / Password?</a>
							</div>
						</div>
						<% end %>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!--/Navbar-->
<% end %>

<!--/Header Gray Wrap-->
<div class="dark-header-background">
	<!--Header Search Boxes-->
	<div class="fmf-header-search container">
		<%= form_tag("/businesses/find", method: "GET") do %>
		<div class="margin-top-20">
			<div class="row">
				<div class="col-sm-4">
					<input name="query" class="header-search-input margin-top-5" type="text" placeholder="Name, category..." />
				</div>
				<div class="col-sm-1 txt-center margin-top-10 white-text">
					NEAR
				</div>
				<div class="col-sm-5">
					<input name="location" class="header-search-input margin-top-5" type="text" placeholder="Location, neighborhood, etc..." />
				</div>
				<div class="col-sm-2 txt-center">
					<button type="submit" class="fmf-ellipse-turquoise-button">Search</button>
				</div>
			</div>
		</div>
		<% end %>

		<%= render "partials/navs/category_nav" %>
	</div>
	<!--/Header Search Boxes-->

	<% if !@business %>
		<!--Inner Sub Header-->
		<div class="container margin-top-50 margin-bottom-30">
			<div class="row">
				<div class="col-sm-2">
					<%= image_tag(get_user_avatar(@user.id, :medium), class: "img-responsive") %>
				</div>
				<div class="col-sm-8">
					<div class="medium-title">
						<%= @user.first_name %> <%= @user.last_name[0] %>.
					</div>
					<div class="italic">
						Member Since <%= get_member_since(@user.id) %>
					</div>
					<div class="margin-top-10">
						<%= @user.about_me %>
					</div>
				</div>
				<div class="col-sm-2 txt-right">
					<% if @edit_button %>
						<a href="/profile/edit"><button class="fmf-ellipse-turquoise-button" type="button">Edit Profile</button></a>
					<% end %>

					<% if session[:user_id] && @user && @user.id != session[:user_id] %>
						<% if !@business %>
							<div class="margin-top-10">
								<button id="follow-user-link" data-id="<%= @user.id %>" data-name="<%= @user.first_name %>" class="fmf-ellipse-turquoise-button"><%= get_follow_text(@user) %></button>
							</div>
						<% else %>
							<div class="margin-top-10">
								<button id="follow-user-link" data-id="<%= @user.id %>" data-name="<%= @business.name %>" class="fmf-ellipse-turquoise-button"><%= get_follow_text(@user) %></button>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
		<!--/Inner Sub Header-->
	<% else %>
		<!--Inner Sub Header-->
		<div class="container margin-top-50 margin-bottom-30">
			<div class="row">
				<div class="col-sm-2">
					<%= image_tag(get_user_avatar(@user.id, :medium), class: "img-responsive") %>
				</div>
				<div class="col-sm-8">
					<div class="medium-title">
						<%= @business.name %>
					</div>
					<div class="italic">
						Member Since <%= get_member_since(@user.id) %>
					</div>
					<div class="margin-top-10">
						<%= @business.description %>
					</div>
				</div>
				<div class="col-sm-2 txt-right">
					<% if @edit_button %>
						<a href="/profile/edit"><button class="fmf-ellipse-turquoise-button" type="button">Edit Profile</button></a>
					<% end %>

					<% if session[:user_id] && @user && @user.id != session[:user_id] %>
						<div class="margin-top-10">
							<button id="follow-user-link" data-id="<%= @user.id %>" data-name="<%= @user.first_name %>" class="fmf-ellipse-turquoise-button"><%= get_follow_text(@user) %></button>
						</div>
					<% end %>
				</div>
			</div>
		</div>
		<!--/Inner Sub Header-->
	<% end %>
</div>
<!--/Header Gray Wrap-->