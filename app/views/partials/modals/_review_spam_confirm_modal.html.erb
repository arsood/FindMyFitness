<!--Spam Confirm Modal-->
<%= form_tag do end %>
<div id="spam-confirm-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Confirm Report</h4>
			</div>
			<div class="modal-body">
				<h2>Are you sure you want to report this review as spam?</h2>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Nevermind</button>
				<button id="spam-confirm-button" type="button" class="btn btn-primary">Yes Report It</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/Spam Confirm Modal-->