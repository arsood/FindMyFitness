<div class="gray-menu-item txt-center">
	<%= @sidebar_header_text %>
</div>

<div class="row margin-top-20">
	<div class="col-sm-4">
		<%= image_tag(@user.avatar.url(:thumb), class: "img-responsive") %>
	</div>
	<div class="col-sm-8">
		<div class="bold">
			<%= @user.first_name %> <%= @user.last_name[0] %>.
		</div>
		<div class="margin-top-10">
			<a href="#">10 Followers</a>
		</div>
		<div>
			<a href="#">10 Following</a>
		</div>

		<% if @user.id != session[:user_id] %>
			<div class="margin-top-10">
				<a href="#">Follow <%= @user.first_name %></a>
			</div>
		<% end %>
	</div>
</div>