<!--Main-->
<input type="hidden" id="page_id" value="show_post" />
<div class="container margin-top-20 margin-bottom-50">
	<div class="row">
		<div class="col-sm-8">
			<!--One Blog Feed Item-->
			<div class="blog-item">
				<div class="row">
					<div class="col-sm-12">
						<div class="medium-title">
							<%= @post.post_title %>
						</div>
					</div>
				</div>
				<div>
					<a href="/profile/<%= @user.id %>"><%= @user.first_name %> <%= @user.last_name %></a>
				</div>
				<div class="margin-top-20" id="galleria">
					<% @post_photos.each do |photo| %>
						<img src="<%= photo.post_photo %>" />
					<% end %>
				</div>
				<div class="margin-top-20">
					<%= simple_format(@post.post_text) %>
				</div>
			</div>
			<!--/One Blog Feed Item-->
		</div>
		<div class="col-sm-4">
			<div class="left-sidebar-menu">
				<a href="#">Reviews</a>
				<a href="#">Your Posts</a>
				<a href="#">Saves</a>
				<a href="#">Events</a>
			</div>
		</div>
	</div>
</div>
<!--/Main-->