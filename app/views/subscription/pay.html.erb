<%= form_tag do %>
<!--Finish Payment-->
<div class="gray-background padding-20">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 white-text margin-top-10">
				PAYMENT INFORMATION
			</div>
			<div class="col-sm-6 txt-right">
				<button type="submit" class="btn btn-info">
					FINISH
					<i class="fa fa-chevron-right margin-left-20"></i>
				</button>
			</div>
		</div>
	</div>
</div>
<!--Finish Payment-->

<div class="container margin-top-50 margin-bottom-50">
	<div class="medium-title gray-text">
		FIND MY FITNESS BUSINESS PREMIUM SUBSCRIPTION
	</div>
	<div class="medium-title regular-weight">
		$99 for the first month
	</div>

	<div class="row margin-top-20">
		<div class="col-sm-7">
			<div class="gray-text">
				CREDIT CARD INFORMATION
			</div>

			<div class="margin-top-20">
				Cardholder Name <sup>*</sup>
			</div>
			<div class="row margin-top-10">
				<div class="col-sm-12">
					<input type="text" class="form-control" required />
				</div>
			</div>

			<div class="row margin-top-20">
				<div class="col-sm-8">
					<div>
						Card Number <sup>*</sup>
					</div>
					<div class="margin-top-10">
						<input type="tel" class="form-control" required />
					</div>
				</div>
				<div class="col-sm-4">
					<div>
						CVV <sup>*</sup>
					</div>
					<div class="margin-top-10">
						<input type="tel" class="form-control" required />
					</div>
				</div>
			</div>

			<div class="margin-top-20">
				Expiration Date <sup>*</sup>
			</div>
			<div class="row margin-top-10">
				<div class="col-sm-4">
					<select class="form-control" required>
						<option value="">Month</option>
						<option value="01">01</option>
					</select>
				</div>
				<div class="col-sm-4">
					<select class="form-control" required>
						<option value="">Year</option>
						<option value="2015">2015</option>
					</select>
				</div>
			</div>

			<div class="gray-text margin-top-50">
				BILLING ADDRESS
			</div>

			<div class="margin-top-20">
				Address <sup>*</sup>
			</div>
			<div class="row margin-top-10">
				<div class="col-sm-12">
					<input type="text" class="form-control" required />
				</div>
			</div>

			<div class="row margin-top-20">
				<div class="col-sm-8">
					<div>
						City <sup>*</sup>
					</div>
					<div class="margin-top-10">
						<input type="text" class="form-control" required />
					</div>
				</div>
				<div class="col-sm-4">
					<div>
						State <sup>*</sup>
					</div>
					<div class="margin-top-10">
						<select class="form-control" required>
							<option value="">State</option>
							<option value="CA">CA</option>
						</select>
					</div>
				</div>
			</div>

			<div class="margin-top-20">
				Phone Number <sup>*</sup>
			</div>
			<div class="row margin-top-10">
				<div class="col-sm-4">
					<input type="tel" class="form-control" required />
				</div>
				<div class="col-sm-4">
					<input type="tel" class="form-control" required />
				</div>
				<div class="col-sm-4">
					<input type="tel" class="form-control" required />
				</div>
			</div>
		</div>
	</div>

	<div class="margin-top-50">
		<sup>*</sup> Required Fields
	</div>
</div>

<!--Finish Payment-->
<div class="gray-background padding-20">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 white-text margin-top-10">
				PAYMENT INFORMATION
			</div>
			<div class="col-sm-6 txt-right">
				<button type="submit" class="btn btn-info">
					FINISH
					<i class="fa fa-chevron-right margin-left-20"></i>
				</button>
			</div>
		</div>
	</div>
</div>
<!--Finish Payment-->
<% end %>